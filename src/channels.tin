#ACTION {[Gossip] %1} {
    #if {"${pub_channel}" == "1"} {__log_line_to_chat__;};
};

#ALIAS {pub_channel %1} {
    #if {"%1" == "on"} {
        #echo {<149>Now logging public channels chat to monitor.<099>};
        #var {pub_channel} {1};
    };
    #if {"%1" == "off"} {
        #echo {<149>No longer logging public channels chat to monitor.<099>};
        #var {pub_channel} {0};
    };
};

