    #ELSEIF {"%2" == "heal %*"} {#IF {"${GROUP_SPELLUP}" == "1" && "${CURRENT_CHAR}" == "{Shuu|Fendand|Aldrich}"} {#REGEX {%2} {heal %*} {weave 'heal crit' &1};};};
